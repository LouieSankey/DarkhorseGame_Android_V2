<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:flatui="http://schemas.android.com/apk/res-auto"
                style="@android:style/Widget.AbsListView">

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Buy Against"
        android:id="@+id/buyAgainstButton"
        android:focusable="false"
        android:layout_below="@+id/opponentUsernameTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Stephen Curry"
        android:id="@+id/draftedPlayerName"
        android:textSize="20sp"
        android:layout_below="@+id/opponentUsernameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="HMT @ AWT"
        android:id="@+id/oppVersus"
        android:textSize="12sp"
        android:layout_below="@+id/draftedPlayerName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView50"
        />

    <com.romainpiel.shimmer.ShimmerTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="user 3332233"
        android:id="@+id/opponentUsernameTextView"
        android:textColor="@color/draftedOpponent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>