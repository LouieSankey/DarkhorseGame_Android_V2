<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.DraftList">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leagueListView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:groupIndicator="@null"
        android:layout_below="@+id/textView27"
        android:layout_above="@+id/textView28"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:id="@+id/dashboardImageView"
        android:src="@drawable/davisan02"
        android:adjustViewBounds="true"
        android:paddingRight="5dp"
        android:scaleType="fitEnd"
        android:layout_alignBottom="@+id/dashboardCap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Anthony Davis"
        android:id="@+id/dashboardPlayerName"
        android:textSize="19sp"
        android:layout_below="@+id/playerUsername"
        android:layout_toRightOf="@+id/dashboardImageView"
        android:layout_toEndOf="@+id/dashboardImageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Funds Per Match: $3,200"
        android:id="@+id/dashboardCap"
        android:textSize="16sp"
        android:layout_below="@+id/dashboardPrice"
        android:layout_toRightOf="@+id/dashboardImageView"
        android:layout_toEndOf="@+id/dashboardImageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Game Price: $6,800"
        android:id="@+id/dashboardPrice"
        android:textSize="16sp"
        android:layout_below="@+id/draftedPlayerVs"
        android:layout_toRightOf="@+id/dashboardImageView"
        android:layout_toEndOf="@+id/dashboardImageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MIA @ NOP"
        android:id="@+id/draftedPlayerVs"
        android:textSize="12sp"
        android:layout_below="@+id/dashboardPlayerName"
        android:layout_toRightOf="@+id/dashboardImageView"
        android:layout_toEndOf="@+id/dashboardImageView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Opponents"
        android:id="@+id/textView21"
        android:gravity="center_horizontal"
        android:background="@color/material_grey_800"
        android:padding="2dp"
        android:textSize="14sp"
        android:layout_below="@+id/textView23"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <com.romainpiel.shimmer.ShimmerTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="username21"
        android:id="@+id/playerUsername"
        android:textColor="@color/user"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Buy Stats"
        android:id="@+id/textView135"
        android:gravity="center_horizontal"
        android:background="@color/material_grey_800"
        android:padding="2dp"
        android:textSize="14sp"
        android:layout_below="@+id/dashboardImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="00:00:00"
        android:id="@+id/matchUpDraftCountdown"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <com.romainpiel.shimmer.ShimmerTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="DRAFTED"
        android:id="@+id/playerDraftedIndicator"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:background="#af383838"
        android:layout_alignBottom="@+id/dashboardImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/dashboardImageView"
        android:layout_alignEnd="@+id/dashboardImageView"
        android:textColor="#9a9a9a"
        />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contest Standings"
        android:id="@+id/toStandings"
        android:layout_above="@+id/matchUpDraftCountdown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView27"
        android:background="#76bef8"
        android:layout_below="@+id/textView21"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@+id/dashboardAccepted"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView28"
        android:background="#76bef8"
        android:layout_above="@+id/toStandings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="00:30:00"
        android:id="@+id/matchUpBuyCountdown"
        android:layout_alignBottom="@+id/textView34"
        android:layout_toRightOf="@+id/textView34"
        android:layout_toEndOf="@+id/textView34"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(After Draft + 30 min)"
        android:id="@+id/textView23"
        android:textSize="14sp"
        android:layout_below="@+id/matchUpBuyCountdown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Accepted: 0/0"
        android:id="@+id/dashboardAccepted"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Buying Closes: "
        android:id="@+id/textView34"
        android:layout_below="@+id/textView135"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:textColor="@color/buyAgainstColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Matches Set: 0/7"
        android:id="@+id/textView16"
        android:textSize="16sp"
        android:layout_below="@+id/textView135"
        android:layout_alignRight="@+id/textView135"
        android:layout_alignEnd="@+id/textView135"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Draft Ends: "
        android:id="@+id/textView19"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/matchUpDraftCountdown"
        android:layout_toLeftOf="@+id/matchUpDraftCountdown"
        android:layout_toStartOf="@+id/matchUpDraftCountdown"
        android:textColor="@color/draftClock"/>


</RelativeLayout>

