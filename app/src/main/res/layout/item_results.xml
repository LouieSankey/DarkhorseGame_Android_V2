<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#575656"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="66dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pts"
            android:id="@+id/matchCategory"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:padding="4dp"
            android:gravity="center"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:background="#3b3b3b"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/matchCategory"
            android:layout_toEndOf="@+id/matchCategory"

            android:background="@color/material_grey_800">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#575656">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Curry"
                    android:id="@+id/matchPlayerName"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginBottom="1dp"
                    android:textSize="18sp"
                    android:layout_marginTop="1dp"
                    android:gravity="center_horizontal"
                    android:background="@color/material_grey_800"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="32"
                    android:id="@+id/matchPlayerBox"
                    android:layout_column="1"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@color/material_grey_800"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="+2"
                    android:id="@+id/matchPlayerBuy"
                    android:layout_column="2"
                    android:layout_marginBottom="1dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:layout_marginTop="1dp"
                    android:background="@color/material_grey_800"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="34"
                    android:id="@+id/matchPlayerTotal"
                    android:layout_column="3"
                    android:layout_marginBottom="1dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@color/material_grey_800"
                    android:layout_marginLeft="1dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/matchPlayerWin"
                    android:layout_column="4"
                    android:layout_marginBottom="1dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    android:background="@color/material_grey_800"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#575656">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Davis"
                    android:id="@+id/matchOppName"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="18sp"
                    android:layout_marginBottom="1dp"
                    android:gravity="center_horizontal"
                    android:background="@color/material_grey_800"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="27"
                    android:id="@+id/matchOppBox"
                    android:layout_column="1"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@color/material_grey_800"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="+1"
                    android:id="@+id/matchOppBuy"
                    android:layout_column="2"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/material_grey_800"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="29"
                    android:id="@+id/matchOppTotal"
                    android:layout_column="3"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@color/material_grey_800"
                    android:layout_marginLeft="1dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=" "
                    android:id="@+id/matchOppWin"
                    android:layout_column="4"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    android:background="@color/material_grey_800"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</RelativeLayout>