<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Stephen Curry"
        android:id="@+id/lobbyPlayerName"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$2,300"
        android:id="@+id/lobbyFundsRemaining"
        android:textSize="14sp"
        android:layout_below="@+id/subItemPriceDrafted"
        android:layout_alignLeft="@+id/subItemPriceDrafted"
        android:layout_alignStart="@+id/subItemPriceDrafted"
        android:paddingBottom="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lobbyDraftedFor"
        android:layout_above="@+id/lobbyFundsRemaining"
        android:layout_alignLeft="@+id/lobbyFundsRemaining"
        android:layout_alignStart="@+id/lobbyFundsRemaining"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="$7,300"
        android:id="@+id/subItemPriceDrafted"
        android:layout_below="@+id/lobbyPlayerName"
        android:layout_alignLeft="@+id/lobbyPlayerName"
        android:layout_alignStart="@+id/lobbyPlayerName"
        android:textSize="14sp"/>

    <com.romainpiel.shimmer.ShimmerTextView
        tools:text="username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lobbyUsername"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/draftedOpponent"
        android:text="user 332233"
        android:textSize="14sp"
        android:layout_alignTop="@+id/lobbyOppArrow"
        android:layout_alignRight="@+id/lobbyOppArrow"
        android:layout_alignEnd="@+id/lobbyOppArrow"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/lobbyOppArrow"
        android:src="@drawable/right_arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>